{
  "name": "modern-web-app",
  "version": "1.0.0",
  "description": "A modern web application using React, Apollo GraphQL, Prisma DB, and Express.js",
  "repository": "https://github.com/meebix/modern-web-app",
  "author": "Michael Donahue <mtdonahue1@gmail.com>",
  "license": "MIT",
  "private": false,
  "main": "index.js",
  "scripts": {
    "build": "./scripts/build.sh",
    "start": "NODE_ENV=production node .build/server/index.js",
    "dev": "nodemon",
    "lint": "eslint pages --ext '.ts,.tsx'",
    "prettier:fix": "prettier \"**/*.{ts,tsx}\" --write",
    "ts": "tsc & tsc -p server/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:deploy": "prisma deploy",
    "db:seed": "prisma seed",
    "db:seed:run": "babel-node --extensions '.ts' ./server/seeders/seed.ts",
    "db:seed:reset": "yarn db:seed --reset",
    "db:reset": "prisma reset",
    "db:admin": "prisma admin"
  },
  "dependencies": {
    "@zeit/next-less": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.3",
    "apollo-link": "^1.2.12",
    "apollo-link-http": "^1.5.15",
    "apollo-server-express": "^2.6.4",
    "argon2": "^0.24.0",
    "assign-deep": "^1.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "date-fns": "^1.30.1",
    "deepmerge": "^3.3.0",
    "express": "^4.17.1",
    "formik": "^1.5.7",
    "glob": "^7.1.4",
    "googleapis": "^40.0.0",
    "graphql": "^14.3.1",
    "graphql-middleware": "^3.0.2",
    "graphql-shield": "^5.7.1",
    "helmet": "^3.18.0",
    "is-glob": "^4.0.1",
    "isomorphic-unfetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "less": "^3.9.0",
    "next": "^8.1.0",
    "pino": "^5.12.6",
    "pino-pretty": "^3.2.0",
    "prisma": "^1.34.0",
    "prisma-client-lib": "^1.34.0",
    "react": "^16.8.6",
    "react-apollo": "^2.5.8",
    "react-dom": "^16.8.6",
    "semantic-ui-less": "^2.4.1",
    "semantic-ui-react": "^0.87.2",
    "sparkpost": "^2.1.3",
    "stripe": "^7.2.0",
    "universal-cookie": "^4.0.0",
    "uuid": "^3.3.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/csurf": "^1.9.35",
    "@types/helmet": "^0.0.43",
    "@types/next": "^8.0.5",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/webpack-env": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.3-alpha.13",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "chance": "^1.0.18",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-typescript": "^4.0.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^4.0.0",
    "graphql-tag": "^2.10.1",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.2",
    "url-loader": "^2.0.0",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "concurrent": true,
    "linters": {
      "*.{ts,tsx}": [
        "yarn prettier:fix",
        "yarn lint --fix",
        "git add"
      ]
    }
  }
}

{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["client/*"],
      "@config": ["config"],
      "@pages/*": ["pages/*"],
      "@server/*": ["server/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", "server/**/*.ts"]
}
